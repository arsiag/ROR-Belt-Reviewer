<p> <a class="nav" href="/events">Events Dashboard</a> </p>
<div id="addeventleftwrapper">
    <h2>Update Event Information</h2>
    <form action="/events/<%= @event.id %>" method="post">
        <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
        <input type="hidden" name="_method" value="patch"> 
        <p>Name: <input type="text" name="event[name]" value = "<%= @event.name %>"></p>
        <p>Date: <input type="date" name="event[event_date]" value = "<%= @event.event_date %>"></p>
        <p>Location: 
            <select class="selectinput" name="event[state_id]" value = "<%= @event.state %>">
                <% all_states.each do |state| %>
                    <% if state.id == @event.state.id %>
                        <option selected value="<%=state.id%>"><%=state.abbreviation%></option>
                    <% else %>
                        <option value="<%=state.id%>"><%=state.abbreviation%></option>
                    <% end %>
                <%end%>
            </select>
            <input class="shortinput" type="text" name="event[location]" value = "<%= @event.location %>">
        </p>
        <input class="button" type="submit" value="Update Event">
    </form>
</div>
